<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Institucion Educativa</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Inicio
            </NavLink>
        </div>  
              
        <div class="nav-item px-3">
            <NavLink class="nav-link" @onclick="()=>DesplegarCursos()" href="listadoCursos">
                <span class="oi oi-book"  aria-hidden="true"></span> Cursos
            </NavLink>
        </div>
        @if(_desplegarCursos)
        {
        <div id="nav-submenu">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="listadoCursos">
                    <span class="oi oi-list" aria-hidden="true"></span> Listado
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="agregarCurso">
                    <span class="oi oi-plus" aria-hidden="true"></span> Agregar curso
                </NavLink>
            </div>
        </div>
        }

        <div class="nav-item px-3">
            <NavLink class="nav-link" @onclick="()=>DesplegarEstudiantes()" href="listadoEstudiantes">
                <span class="oi oi-people"  aria-hidden="true"></span> Estudiantes
            </NavLink>
        </div>
        @if(_desplegarEstudiantes)
        {
        <div id="nav-submenu">
            <div class="nav-item px-3" style="font-stretch: condensed;">
                <NavLink class="nav-link" href="listadoEstudiantes">
                    <span class="oi oi-list" aria-hidden="true"></span> Listado
                </NavLink>
            </div>
            <div class="nav-item px-3" style="font-stretch: condensed;">
                <NavLink class="nav-link" href="agregarEstudiante">
                    <span class="oi oi-plus" aria-hidden="true"></span> Agregar estudiante
                </NavLink>
            </div>        
            <div class="nav-item px-3" style="font-stretch: condensed;">
                <NavLink class="nav-link" href="estudiantesEstudiando">
                    <span class="oi oi-plus"  aria-hidden="true"></span> Cursando
                </NavLink>
            </div>
            <div class="nav-item px-3" style="font-stretch: condensed;">
                <NavLink class="nav-link" href="estudiantesAntiguos">
                    <span class="oi oi-plus"  aria-hidden="true"></span>Con cursos terminados
                </NavLink>
            </div>
        </div>
        }

        <div class="nav-item px-3">
            <NavLink class="nav-link" @onclick="()=>DesplegarInscripciones()" href="listadoInscripciones">
                <span class="oi oi-document"  aria-hidden="true"></span> Inscripciones
            </NavLink>
        </div>
        @if(_desplegarInscripciones)
        {
        <div id="nav-submenu">
            <div class="nav-item px-3" style="font-stretch: condensed;">
                <NavLink class="nav-link" href="listadoInscripciones">
                    <span class="oi oi-list" aria-hidden="true"></span> Listado
                </NavLink>
            </div>
            <div class="nav-item px-3" style="font-stretch: condensed;">
                <NavLink class="nav-link" href="agregarInscripcion">
                    <span class="oi oi-plus" aria-hidden="true"></span> Agregar inscripción
                </NavLink>
            </div>
        </div>        
        }

    </nav>
</div>

@code {

    bool _desplegarCursos= false;
    bool _desplegarEstudiantes= false;
    bool _desplegarInscripciones= false;

    void DesplegarCursos()
    {
        _desplegarEstudiantes= false;
        _desplegarInscripciones= false;
        _desplegarCursos= !_desplegarCursos;
    }

    void DesplegarEstudiantes()
    {
        _desplegarCursos= false;
        _desplegarInscripciones= false;
        _desplegarEstudiantes= !_desplegarEstudiantes;
    }

    void DesplegarInscripciones()
    {
        _desplegarCursos= false;
        _desplegarEstudiantes= false;
        _desplegarInscripciones= !_desplegarInscripciones;
    }
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
